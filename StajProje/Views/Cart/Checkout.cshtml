@using StajProje.Models
@model StajProje.Models.ShippingDetails
@{
    ViewBag.Title = "Checkout";
}

<style>
    .field-validation-error {
        color: #f00;
    }

    .field-validation-valid {
        display: none;
    }

    .input-validation-error {
        border: 1px solid #f00;
        background-color: #fee;
    }

    .validation-summary-errors {
        font-weight: bold;
        color: #f00;
    }

    .validation-summary-valid {
        display: none;
    }
</style>


<section class="ftco-section">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary() // Bu eror mesajları için yapıyor  en aşadkileri eklememiz lazım js leri
        <div class="container">

            <div class="row justify-content-center">

                <div class="col-xl-7 ftco-animate">
                    <form action="#" class="billing-form">
                        <h3 class="mb-4 billing-heading">Billing Details</h3>
                        <div class="row align-items-end">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="firstname">Firt Name</label>
                                    <input type="text" class="form-control" placeholder="">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="lastname">Last Name</label>
                                    <input type="text" class="form-control" placeholder="">
                                </div>
                            </div>
                            <div class="w-100"></div>
                            <div class="col-md-12">
                               
                                    <label for="lastname">Adres Başlığı</label>
                                    @Html.TextBoxFor(x => x.AdresBasligi, new { @class = "form-control" })
                                
                            </div>
                            <div class="w-100"></div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="streetaddress">Street Address</label>
                                    @Html.TextBoxFor(x => x.Adres, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="w-100"></div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="towncity">Şehir</label>
                                    @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="towncity">Semt</label>
                                    @Html.TextBoxFor(x => x.Semt, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="w-100"></div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="towncity">Mahalle</label>
                                    @Html.TextBoxFor(x => x.Mahalle, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="postcodezip">Posta Kodu</label>
                                    @Html.TextBoxFor(x => x.PostaKodu, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="w-100"></div>
                            <div class="col-md-12">
                                <div class="form-group mt-4">
                                    <div class="radio">
                                        <label class="mr-3"><input type="radio" name="optradio"> Create an Account? </label>
                                        <label><input type="radio" name="optradio"> Ship to different address</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form><!-- END -->
                </div>
                <div class="col-xl-5">
                    <div class="row mt-5 pt-3">
                        <div class="col-md-12 d-flex mb-5">
                            <div class="cart-detail cart-total p-3 p-md-4">
                                <h3 class="billing-heading mb-4">Cart Total</h3>
                                <p class="d-flex">
                                    <span>Subtotal</span>
                                    <span>
                                        @if (TempData != null)
                                        {
                                        <h2> @TempData["Fiyat"]</h2>@:</span>
                                            @:</p>
                                            <p class="d-flex">
                                                <span>Delivery</span>
                                                <span>$0.00</span>
                                            </p>
                                            <p class="d-flex">
                                                <span>Discount</span>
                                                <span>$0.00</span>
                                            </p>
                                            <text><hr>
                                                <p class="d-flex total-price"></text>
                                            <span>Total</span>
                                            @:<span>@TempData["Fiyat"]
                                        }
                                    </span>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="cart-detail p-3 p-md-4">
                                <h3 class="billing-heading mb-4">Payment Method</h3>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <div class="radio">
                                            <label><input type="radio" name="optradio" class="mr-2"> Direct Bank Tranfer</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <div class="radio">
                                            <label><input type="radio" name="optradio" class="mr-2"> Check Payment</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <div class="radio">
                                            <label><input type="radio" name="optradio" class="mr-2"> Paypal</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <div class="checkbox">
                                            <label><input type="checkbox" value="" class="mr-2"> I have read and accept the terms and conditions</label>
                                        </div>
                                    </div>
                                </div>
                                <p><input type="submit" value="Place an order" class="btn btn-primary py-3 px-4"></p>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- .col-md-8 -->

            </div>
            
        </div>
        }
    </section> <!-- .section -->

    <section class="ftco-section ftco-no-pt ftco-no-pb py-5 bg-light">
        <div class="container py-4">
            <div class="row d-flex justify-content-center py-5">
                <div class="col-md-6">
                    <h2 style="font-size: 22px;" class="mb-0">Subcribe to our Newsletter</h2>
                    <span>Get e-mail updates about our latest shops and special offers</span>
                </div>
                <div class="col-md-6 d-flex align-items-center">
                    <form action="#" class="subscribe-form">
                        <div class="form-group d-flex">
                            <input type="text" class="form-control" placeholder="Enter email address">
                            <input type="submit" value="Subscribe" class="submit px-3">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>











    <div class="hero-wrap hero-bread" style="background-image: url('images/bg_1.jpg');">
        <div class="container">
            <div class="row no-gutters slider-text align-items-center justify-content-center">
                <div class="col-md-9 ftco-animate text-center">
                    <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home</a></span> <span>Checkout</span></p>
                    <h1 class="mb-0 bread">Checkout</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Sipariş Bilgileriniz</h2>
                <p>Lütfen sipariş bilgilerinizi doldurunuz.</p>
                <hr />

                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary() // Bu eror mesajları için yapıyor  en aşadkileri eklememiz lazım js leri

                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Username</label>
                        <div class="col-sm-6">
                            <span class="badge-danger">
                                @User.Identity.Name
                            </span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Adres Tanımı</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(x => x.AdresBasligi, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Adres</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(x => x.Adres, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Şehir</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Semt</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(x => x.Semt, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Mahalle</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(x => x.Mahalle, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Posta Kodu</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(x => x.PostaKodu, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-6">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>

                }

            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

