                                    @*Burda sadece gönderimi yapmış oluyor begin formdur hiddendir hiç ihtiyaç yok
                                    <span class="ion-ios-close">
                                        @Html.ActionLink("Kaldır", "RemoveFromCart", "Cart", new { id = item.Product.Id }, new { })
