@using StajProje.Entity
@model StajProje.Models.OrderDetailsModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">

            <h2>Sipariş Detay Bilgileri</h2>
            <hr />
            @if (TempData["message"] != null)
            {
                <div class="alert alert-success">
                    @TempData["message"]
                </div>
            }

                <dl class="row">


                    <dt class="col-sm-3">Username</dt>
                    <dd class="col-sm-9">@Model.UserName
                    <dd>

                    <dt class="col-sm-3">Order State</dt>
                    <dd class="col-sm-9">
                        @*Aslında submit sonrası gönderilecek şeyleride ifade ediyor diyebiliririz parntez içini.*@
                        @using (Html.BeginForm("UpdateOrderState", "Order", FormMethod.Post))
                        {
                            @Html.HiddenFor(i => i.OrderId)

                            <dl class="row">
                                <dt class="col-sm-4">
                                    @*Enumları çıkarabiliyoruz böyleceee*@
                                    @Html.EnumDropDownListFor(i => i.OrderState, "Select Order State", new { @class = "form-control" })
                                </dt>
                                <dd class="col-sm-4">
                                    <button type="submit" class="btn btn-primary">Update</button>
                                </dd>
                            </dl>
                        }

                    </dd>







                    <dt class="col-sm-3">Order Id</dt>
                    <dd class="col-sm-9">@Model.OrderId</dd>

                    <dt class="col-sm-3">Order Number</dt>
                    <dd class="col-sm-9">@Model.OrderNumber</dd>

                    <dt class="col-sm-3">Total</dt>
                    <dd class="col-sm-9">
                        <i class="fa fa-try" aria-hidden="true"></i>
                        @Model.Total
                    </dd>

                    <dt class="col-sm-3">Order Date</dt>
                    <dd class="col-sm-9">@Model.OrderDate</dd>


                    <dt class="col-sm-3">Adres Başlığı</dt>
                    <dd class="col-sm-9">@Model.AdresBasligi</dd>

                    <dt class="col-sm-3">Adres</dt>
                    <dd class="col-sm-9">@Model.Adres</dd>

                    <dt class="col-sm-3">Şehir</dt>
                    <dd class="col-sm-9">@Model.Sehir</dd>

                    <dt class="col-sm-3">Semt</dt>
                    <dd class="col-sm-9">@Model.Semt</dd>

                    <dt class="col-sm-3">Mahalle</dt>
                    <dd class="col-sm-9">@Model.Mahalle</dd>

                    <dt class="col-sm-3">Posta Kodu</dt>
                    <dd class="col-sm-9">@Model.PostaKodu</dd>

                    <div class="col-md-12 ftco-animate">

                        <div class="cart-list">
                            <table class="table">
                                <thead class="thead-primary">
                                <tr class="text-center">
                                    <th>Resim</th>
                                    <th>Ürün Adı</th>
                                    <th>Fiyat</th>
                                    <th>Adet</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model.Orderlines)
                                {

                                    <tr class="text-center">



                                        <td class="image-prod">
                                            <div class="img" style="background-image: url(/tema/@item.Image);"></div>
                                        </td>
                                        <td class="product-name">
                                            <h3>@item.ProductName</h3>
                                            <p>Far far away, behind the word mountains, far from the countries</p>
                                        </td>
                                        <td class="price">@item.Price.ToString("c")</td>
                                        <td class="price">
                                            @item.Quantity Adet
                                        </td>
                                    </tr><!-- END TR-->
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </dl>

        </div>
    </div>
</div>
